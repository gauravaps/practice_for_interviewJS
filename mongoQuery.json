//all queryes here for refernce.. 

//--------------------------------------------
// ðŸŸ¢ 1ï¸âƒ£ Insert Operations
//--------------------------------------------

// ðŸ‘‰ Ek document insert karne ke liye
db.cars.insertOne({
  maker: "Tata",
  model: "Punch",
  fuel_type: "Petrol",
  engine: { type: "Naturally Aspirated", cc: 1199 },
  color: "blue"
});

// ðŸ‘‰ Multiple documents insert karne ke liye
db.cars.insertMany([
  { maker: "Hyundai", model: "i20", fuel_type: "Petrol", color: "white" },
  { maker: "Mahindra", model: "XUV700", fuel_type: "Diesel", color: "black" }
]);

//--------------------------------------------
// ðŸŸ¡ 2ï¸âƒ£ Read (Find) Operations
//--------------------------------------------

// ðŸ‘‰ Sabhi documents find karne ke liye
db.cars.find();

// ðŸ‘‰ Specific condition se document find karne ke liye
db.cars.find({ maker: "Tata" });

// ðŸ‘‰ Sirf ek document find karne ke liye
db.cars.findOne({ model: "Nexon" });

// ðŸ‘‰ Specific fields ko show karne ke liye (projection)
db.cars.find({ maker: "Tata" }, { model: 1, color: 1, _id: 0 });

// ðŸ‘‰ Nested field ke basis par find karne ke liye
db.cars.find({ "engine.cc": 1199 });

//--------------------------------------------
// ðŸ”µ 3ï¸âƒ£ Update Operations
//--------------------------------------------

// ðŸ‘‰ Ek document update karne ke liye
db.cars.updateOne(
  { model: "Nexon" },
  { $set: { color: "white" } }
);

// ðŸ‘‰ Multiple documents update karne ke liye
db.cars.updateMany(
  { maker: "Hyundai" },
  { $set: { fuel_type: "Petrol" } }
);

// ðŸ‘‰ Field increment karne ke liye
db.cars.updateOne(
  { model: "Creta" },
  { $inc: { "engine.cc": 10 } }
);

// ðŸ‘‰ Array me naya feature push karne ke liye
db.cars.updateOne(
  { model: "Nexon" },
  { $push: { features: "Airbags" } }
);

//--------------------------------------------
// ðŸ”´ 4ï¸âƒ£ Delete Operations
//--------------------------------------------

// ðŸ‘‰ Ek document delete karne ke liye
db.cars.deleteOne({ model: "Baleno" });

// ðŸ‘‰ Multiple documents delete karne ke liye
db.cars.deleteMany({ color: "black" });

// ðŸ‘‰ Collection ke sabhi documents delete karne ke liye
db.cars.deleteMany({});

//--------------------------------------------
// ðŸŸ£ 5ï¸âƒ£ Comparison Operators ($gt, $lt, $gte, $lte, $ne)
//--------------------------------------------

// ðŸ‘‰ engine.cc greater than 1200
db.cars.find({ "engine.cc": { $gt: 1200 } });

// ðŸ‘‰ engine.cc less than 1500
db.cars.find({ "engine.cc": { $lt: 1500 } });

// ðŸ‘‰ engine.cc greater than or equal to 1199
db.cars.find({ "engine.cc": { $gte: 1199 } });

// ðŸ‘‰ engine.cc not equal to 1493
db.cars.find({ "engine.cc": { $ne: 1493 } });

// ðŸ‘‰ Range ke andar (1199 se bada aur 1400 se chhota)
db.cars.find({ "engine.cc": { $gt: 1199, $lt: 1400 } });

//--------------------------------------------
// ðŸŸ¤ 6ï¸âƒ£ Logical Operators ($and, $or, $not, $nor)
//--------------------------------------------

// ðŸ‘‰ Multiple conditions ke sath (AND)
db.cars.find({
  $and: [{ maker: "Tata" }, { color: "black" }]
});

// ðŸ‘‰ OR condition (ek bhi match chalega)
db.cars.find({
  $or: [{ maker: "Tata" }, { maker: "Hyundai" }]
});

// ðŸ‘‰ NOT condition (jo match na kare)
db.cars.find({
  color: { $not: { $eq: "black" } }
});

// ðŸ‘‰ NOR condition (dono condition match nahi hone chahiye)
db.cars.find({
  $nor: [{ maker: "Tata" }, { color: "white" }]
});

//--------------------------------------------
// ðŸŸ¢ 7ï¸âƒ£ Array Queries
//--------------------------------------------

// ðŸ‘‰ Exact array match karne ke liye
db.cars.find({ features: ["ABS", "Apple CarPlay"] });

// ðŸ‘‰ Array me dono elements hone chahiye (order matter nahi)
db.cars.find({ features: { $all: ["ABS", "Apple CarPlay"] } });

// ðŸ‘‰ Array me koi ek element match kare
db.cars.find({ features: "ABS" });

// ðŸ‘‰ Array ke element count karne ke liye
db.cars.find({ features: { $size: 3 } });

//--------------------------------------------
// ðŸŸ¡ 8ï¸âƒ£ Sorting aur Limiting
//--------------------------------------------

// ðŸ‘‰ Documents ko maker ke basis pe ascending sort karne ke liye
db.cars.find().sort({ maker: 1 });

// ðŸ‘‰ Descending sort (model ke basis pe)
db.cars.find().sort({ model: -1 });

// ðŸ‘‰ Sirf pehle 2 documents show karne ke liye
db.cars.find().limit(2);

//--------------------------------------------
// ðŸ”µ 9ï¸âƒ£ Exists aur Type Operators
//--------------------------------------------

// ðŸ‘‰ Field exist karta hai ya nahi
db.cars.find({ alloy: { $exists: true } });

// ðŸ‘‰ Field specific type ka hai ya nahi
db.cars.find({ airbags: { $type: "int" } });

//--------------------------------------------
// ðŸŸ£ ðŸ”Ÿ Text aur Pattern Matching (Regular Expressions)
//--------------------------------------------

// ðŸ‘‰ Model name me â€œaâ€ include ho
db.cars.find({ model: { $regex: /a/i } });

// ðŸ‘‰ Maker exactly â€œTataâ€ ho (case-insensitive)
db.cars.find({ maker: { $regex: /^tata$/i } });

//--------------------------------------------
// âšª 11ï¸âƒ£ Counting aur Distinct
//--------------------------------------------

// ðŸ‘‰ Total documents count karne ke liye
db.cars.countDocuments();

// ðŸ‘‰ Unique maker names find karne ke liye
db.cars.distinct("maker");

//--------------------------------------------
// ðŸŸ¢ 12ï¸âƒ£ Aggregation ka simple example
//--------------------------------------------

// ðŸ‘‰ Total cars count by maker
db.cars.aggregate([
  { $group: { _id: "$maker", totalCars: { $sum: 1 } } }
]);


//-----------------------------------------------------------
// ðŸŸ¢ Query: Array ki length (size) check karne ke liye
//-----------------------------------------------------------

// ðŸ‘‰ Ye query un documents ko find karegi jinke "features" array me
// exactly 3 elements (items) present hain.
// Agar kisi document me "features" ke andar 3 hi values hain
// to wo document output me aayega.

db.cars.find({ features: { $size: 3 } });
features: [ "ABS", "Apple CarPlay", "Airbags" ]


// ðŸ‘‰ Array me dono elements "ABS" aur "Apple CarPlay" hone chahiye
db.cars.find({ features: { $all: ["ABS", "Apple CarPlay"] } });


// ðŸ‘‰ Sirf "model" field show karega (without _id)
db.cars.find({}, { model: 1, _id: 0 });

// ðŸ‘‰ Sirf "model" field show karega aur models ko ascending order me sort karega (Aâ€“Z)
db.cars.find({}, { model: 1, _id: 0 }).sort({ model: 1 });

// ðŸ‘‰ "maker" aur "model" dono show karega aur model ke basis par ascending sort karega
db.cars.find({}, { maker: 1, model: 1, _id: 0 }).sort({ model: 1 });



//------------------------------------------------------------
// ðŸ‘‰ Unique model names group karne ke liye (without count)
db.cars.aggregate([{ $group: { _id: "$model" } }]);

//------------------------------------------------------------
// ðŸ‘‰ Har model ka total count (kitne documents hain har model ke)
db.cars.aggregate([{ $group: { _id: "$model", totalsum: { $sum: 1 } } }]);

//------------------------------------------------------------
// ðŸ‘‰ Har maker ke price ka average nikalne ke liye
db.cars.aggregate([{ $group: { _id: "$maker", average: { $avg: "$price" } } }]);

//------------------------------------------------------------
// ðŸ‘‰ Sirf un cars ko filter karne ke liye jinke maker "Tata" aur engine.cc > 1200 hai
db.cars.aggregate([{ $match: { maker: "Tata", "engine.cc": { $gt: 1200 } } }]);

//------------------------------------------------------------
// ðŸ‘‰ Maker "Tata" wali cars ka total count nikalne ke liye
db.cars.aggregate([{ $match: { maker: "Tata" } }, { $count: "totalcars" }]);

//------------------------------------------------------------
// ðŸ‘‰ Maker "Tata" ki cars ko fuel type ke basis par group karke count karne ke liye
db.cars.aggregate([
  { $match: { maker: "Tata" } },
  { $group: { _id: "$fuel_type", totalcars: { $sum: 1 } } }
]);


//------------------------------------------------------------
// ðŸ‘‰ Maker "Tata" wali cars me sirf fuel_type aur sunroof fields dikhane ke liye
db.cars.aggregate([
  { $match: { maker: "Tata" } },
  { $project: { _id: 0, fuel_type: 1, sunroof: 1 } }
]);

//------------------------------------------------------------
// ðŸ‘‰ Maker ke basis par sabhi cars ka count nikalne ke liye (auto group + count)
db.cars.aggregate([{ $sortByCount: "$maker" }]);  

// ðŸ‘‰ Har car ke fuel_type me "Dies" word match karke true/false return karega
db.cars.aggregate([
  {
    $project: {
      _id: 0,
      model: 1,
      is_diesel: {
        $regexMatch: { input: "$fuel_type", regex: "Dies" }
      }
    }
  }
]);


